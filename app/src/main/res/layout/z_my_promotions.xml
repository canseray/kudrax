<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/a_white11"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ViewStub
            android:id="@+id/lay_stub"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/a_brown11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp50"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp10"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/lay_active_promotions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp10">

                <tr.limonist.extras.MyTextView
                    android:id="@+id/tv_active_promotions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Aktif Promosyonlar"
                    android:textColor="@color/a_brown11"
                    android:textSize="@dimen/dp15" />

                <View
                    android:id="@+id/view_active_promotions"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/a_brown11" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_used_promotions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp10">

                <tr.limonist.extras.MyTextView
                    android:id="@+id/tv_used_promotions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Kullanılmış Promosyon"
                    android:textColor="@color/a_brown11"
                    android:textSize="@dimen/dp15" />

                <View
                    android:id="@+id/view_used_promotions"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/a_brown11" />

            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/dp5"
            android:layout_weight="1"
            android:background="@color/a_white11">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.twotoasters.jazzylistview.JazzyGridView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:horizontalSpacing="@dimen/dp2"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/dp2" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <TextView
                android:id="@android:id/empty"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="@dimen/dp20"
                android:text="@string/s_no_data"
                android:textColor="@color/a_black12"
                android:textSize="@dimen/dp25"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>