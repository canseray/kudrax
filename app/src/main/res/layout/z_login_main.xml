<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/login_background_k"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <View
        android:background="@color/a_black13"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <ScrollView
        android:paddingTop="@dimen/dp25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/viewstub_parent_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ViewStub
                    android:id="@+id/lay_stub"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:background="@color/a_white11"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp40"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="center"
                    android:padding="@dimen/dp8"
                    android:text="@string/s_new_user_desc"
                    android:textColor="@color/a_white11"
                    android:textSize="@dimen/dp12" />



                <LinearLayout
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:background="@drawable/but_oval_str_white1_tra"
                    android:layout_height="@dimen/dp50">

                    <ImageView
                        android:layout_weight="0"
                        android:src="@drawable/email_k"
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25" />

                    <EditText
                        android:fontFamily="@font/comfortaa"
                        android:layout_marginLeft="@dimen/dp15"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_weight="1"
                        android:id="@+id/et_user"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|left"
                        android:hint="@string/s_email_address"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:scrollHorizontally="true"
                        android:textColor="@color/a_white11"
                        android:textColorHint="@color/a_white11"
                        android:textSize="@dimen/dp15" />

                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp8" />

                <LinearLayout
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:background="@drawable/but_oval_str_white1_tra"
                    android:layout_height="@dimen/dp50">

                    <ImageView
                        android:layout_weight="0"
                        android:src="@drawable/password_k"
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25" />

                    <EditText
                        android:fontFamily="@font/comfortaa"
                        android:layout_marginLeft="@dimen/dp15"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_weight="1"
                        android:id="@+id/et_pass"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|left"
                        android:hint="@string/s_password"
                        android:imeOptions="actionGo"
                        android:inputType="textPassword"
                        android:scrollHorizontally="true"
                        android:textColor="@color/a_white11"
                        android:textColorHint="@color/a_white11"
                        android:textSize="@dimen/dp15" />

                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp250"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:paddingLeft="@dimen/dp15"
                            android:paddingRight="@dimen/dp15"
                            android:layout_marginTop="@dimen/dp5"
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:background="@drawable/but_oval_str_white_main"
                            android:layout_height="@dimen/dp50">

                            <ImageView
                                android:layout_weight="0"
                                android:src="@drawable/sign_rigth_k"
                                android:layout_width="@dimen/dp25"
                                android:layout_height="@dimen/dp25" />

                        <tr.limonist.extras.MyTextView
                            android:fontFamily="@font/comfortaa"
                            android:id="@+id/tv_done"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/dp50"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/s_log_in"
                            android:textStyle="bold"
                            android:textColor="@drawable/text_white"
                            android:textSize="@dimen/dp18" />

                            <ImageView
                                android:layout_weight="0"
                                android:layout_width="@dimen/dp25"
                                android:layout_height="@dimen/dp25" />

                        </LinearLayout>

                        <tr.limonist.extras.MyTextView
                            android:fontFamily="@font/comfortaa"
                            android:id="@+id/tv_forget"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/dp50"
                            android:layout_marginTop="@dimen/dp30"
                            android:gravity="center"
                            android:text="@string/s_forgot_password"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textColor="@drawable/text_white"
                            android:textSize="@dimen/dp15" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>