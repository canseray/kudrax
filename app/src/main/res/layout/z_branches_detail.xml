<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/a_white11"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ViewStub
            android:id="@+id/lay_stub"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/a_brown11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp20"
            android:paddingVertical="@dimen/dp10"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@drawable/but_oval_str_brown1_tra"
                android:orientation="vertical"
                android:padding="@dimen/dp8">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:background="@drawable/malls_inmenu_k"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:textColor="@color/a_brown11"
                        android:textSize="@dimen/dp18"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adres"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp10"
                    android:textColor="@color/a_brown12"
                    android:textSize="@dimen/dp12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp15">

                <TextView
                    android:id="@+id/select_store"
                    android:text="@string/s_choose_store"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="@dimen/dp18"
                    android:textColor="@color/a_brown11"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/but_oval_str_brown1_tra"
                    android:src="@drawable/b_ic_con_phone" />

                <TextView
                    android:id="@+id/select_another_store"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/dp18"
                    android:textAllCaps="true"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/a_brown11"
                    android:text="@string/s_choose_another_store"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@drawable/but_oval_str_brown1_tra" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
