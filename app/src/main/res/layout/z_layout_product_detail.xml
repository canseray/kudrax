<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/a_white11"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp25">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ViewStub
            android:id="@+id/lay_stub"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/a_back"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp200"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@color/a_white11">


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/img"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        app:actualImageScaleType="fitCenter"
                        app:placeholderImage="@mipmap/place_holder" />


                    <com.varunest.sparkbutton.SparkButton
                        android:id="@+id/spark"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp5"
                        app:sparkbutton_activeImage="@drawable/ic_heart_on"
                        app:sparkbutton_iconSize="@dimen/dp40"
                        app:sparkbutton_inActiveImage="@drawable/ic_heart_off"
                        app:sparkbutton_primaryColor="@color/a_gray21"
                        app:sparkbutton_secondaryColor="@color/a_main11" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/a_white11"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10">

                    <tr.limonist.extras.MyTextView
                        android:fontFamily="@font/comfortaa"
                        android:id="@+id/tv_title"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp35"
                        android:gravity="center"
                        android:padding="@dimen/dp5"
                        android:textColor="@drawable/text_black"
                        android:textSize="@dimen/dp15" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp35"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:fontFamily="@font/comfortaa"
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:padding="@dimen/dp2"
                            android:textColor="@color/a_black13"
                            android:textSize="@dimen/dp18" />

                        <tr.limonist.extras.MyTextView
                            android:fontFamily="@font/comfortaa"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:padding="@dimen/dp2"
                            android:text=" X "
                            android:textColor="@drawable/text_black2"
                            android:textSize="@dimen/dp15" />

                        <tr.limonist.extras.MyTextView
                            android:fontFamily="@font/comfortaa"
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:padding="@dimen/dp2"
                            android:textColor="@drawable/text_black"
                            android:textSize="@dimen/dp20"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp35"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lay_minus"
                            android:layout_width="@dimen/dp60"
                            android:layout_height="fill_parent"
                            android:background="@drawable/but_oval_only_left_str_black_tra"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp10"
                            android:paddingRight="@dimen/dp5">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:duplicateParentState="true"
                                android:src="@drawable/b_ic_minus_black" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_plus"
                            android:layout_width="@dimen/dp60"
                            android:layout_height="fill_parent"
                            android:background="@drawable/but_oval_only_right_str_black_tra"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp5"
                            android:paddingRight="@dimen/dp10">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:duplicateParentState="true"
                                android:src="@drawable/b_ic_plus_black" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <WebView
            android:visibility="gone"
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="1"
            android:background="@color/a_white11"
            android:padding="@dimen/dp10" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp60"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp10">

            <LinearLayout
                android:id="@+id/lay_cart"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/but_rnd_main2"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"
                    android:duplicateParentState="true"
                    android:src="@drawable/b_ic_add_cart" />

                <tr.limonist.extras.MyTextView
                    android:fontFamily="@font/comfortaa"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dp5"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="@string/s_add_cart"
                    android:textAllCaps="true"
                    android:textColor="@drawable/text_white"
                    android:textSize="@dimen/dp20"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>