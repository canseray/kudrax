<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp10">

    <RelativeLayout
        android:duplicateParentState="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp250">

        <LinearLayout
            android:duplicateParentState="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:actualImageScaleType="fitCenter"
                app:placeholderImage="@mipmap/logo_brown_k"
                app:roundTopLeft="true"
                app:roundTopRight="true"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/a_brown11"
                app:roundingBorderWidth="@dimen/dp1"/>

        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/a_brown11"
            app:roundingBorderWidth="@dimen/dp1"
            android:id="@+id/img_play"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:placeholderImage="@mipmap/play_k" />

        <com.facebook.drawee.view.SimpleDraweeView
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/a_brown11"
            app:roundingBorderWidth="@dimen/dp1"
            android:id="@+id/img_favorite"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:placeholderImage="@mipmap/fav_flower_k"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:duplicateParentState="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp25"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <tr.limonist.extras.MyTextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/a_brown11"
            android:textSize="@dimen/dp15"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>