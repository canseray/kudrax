<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dp5">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp100"
        android:background="@drawable/back_rnd_str_black3_tra"
        android:gravity="center"
        android:padding="@dimen/dp5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp8">

            <tr.limonist.extras.MyTextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp30"
                android:fontFamily="@font/comfortaa"
                android:gravity="center_vertical|left"
                android:textColor="@drawable/text_black"
                android:textSize="@dimen/dp18"
                android:textStyle="bold" />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_weight="0"
                    android:id="@+id/img"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@mipmap/place_holder" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <tr.limonist.extras.MyTextView
                        android:id="@+id/desc"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp30"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center_vertical|left"
                        android:textColor="@drawable/text_black2"
                        android:textSize="@dimen/dp15" />

                    <tr.limonist.extras.MyTextView
                        android:id="@+id/date"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp20"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center_vertical|left"
                        android:textColor="@drawable/text_black2"
                        android:textSize="@dimen/dp10" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <tr.limonist.extras.MyTextView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:background="@drawable/but_rnd_15_main2"
            android:fontFamily="@font/comfortaa"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:text="@string/s_use"
            android:textColor="@drawable/text_white"
            android:textSize="@dimen/dp15" />

    </LinearLayout>

</LinearLayout>