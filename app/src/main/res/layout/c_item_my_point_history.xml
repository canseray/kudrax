<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dp5">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp100"
        android:background="@drawable/back_rnd_str_black3_tra"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="60"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp8">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp50"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:src="@drawable/ic_point_history_main2" />

                <tr.limonist.extras.MyTextView
                    android:id="@+id/value"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dp10"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="center_vertical|left"
                    android:textColor="@drawable/text_main2"
                    android:textSize="@dimen/dp40"
                    android:textStyle="bold" />

            </LinearLayout>

            <tr.limonist.extras.MyTextView
                android:id="@+id/date"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dp5"
                android:fontFamily="@font/comfortaa"
                android:gravity="center_vertical|left"
                android:textColor="@drawable/text_black2"
                android:textSize="@dimen/dp12" />


        </LinearLayout>

        <tr.limonist.extras.MyTextView
            android:id="@+id/desc"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:layout_weight="40"
            android:fontFamily="@font/comfortaa"
            android:gravity="center_vertical|right"
            android:textColor="@drawable/text_black"
            android:textSize="@dimen/dp15" />

    </LinearLayout>

</LinearLayout>