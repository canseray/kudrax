<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_white11"
    android:paddingTop="@dimen/dp25"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ViewStub
                android:id="@+id/lay_stub"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp50"
                    android:background="@drawable/back_rect_str_black2_tra"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/s_title_home_work"
                        android:textColor="@color/a_black13"
                        android:textSize="@dimen/dp10" />

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="@string/s_title_home_work"
                        android:textColor="@color/a_black11"
                        android:textColorHint="@color/a_black13"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/dp18" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@drawable/back_rect_str_black2_tra"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5">

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/s_address"
                        android:textColor="@color/a_black13"
                        android:textSize="@dimen/dp10" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="@string/s_address"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:textColor="@color/a_black11"
                        android:textColorHint="@color/a_black13"
                        android:textSize="@dimen/dp18" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="fill_parent">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/back_rect_str_black2_tra"
                        android:orientation="vertical"
                        android:padding="@dimen/dp5">

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/s_city"
                            android:textColor="@color/a_black13"
                            android:textSize="@dimen/dp10" />

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:hint="@string/s_city"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:textColor="@color/a_black11"
                            android:textColorHint="@color/a_black13"
                            android:textSize="@dimen/dp18" />

                    </RelativeLayout>

                    <View
                        android:layout_weight="0"
                        android:layout_width="@dimen/dp15"
                        android:layout_height="fill_parent"/>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/back_rect_str_black2_tra"
                        android:orientation="vertical"
                        android:padding="@dimen/dp5">

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/s_subcity"
                            android:textColor="@color/a_black13"
                            android:textSize="@dimen/dp10" />

                        <EditText
                            android:id="@+id/et_subcity"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:hint="@string/s_subcity"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:textColor="@color/a_black11"
                            android:textColorHint="@color/a_black13"
                            android:textSize="@dimen/dp18" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@drawable/back_rect_str_black2_tra"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5">

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/s_address_description"
                        android:textColor="@color/a_black13"
                        android:textSize="@dimen/dp10" />

                    <EditText
                        android:id="@+id/et_special"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:hint="@string/s_address_description"
                        android:textColor="@color/a_black11"
                        android:textColorHint="@color/a_black13"
                        android:textSize="@dimen/dp18" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/haritafragment1"
                        class="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/map_pin"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="@dimen/dp60"
                        android:layout_above="@+id/shadow"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/holder_map" />

                    <ImageView
                        android:id="@+id/shadow"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/shadow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="80"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="70"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <tr.limonist.extras.MyTextView
                                        android:id="@+id/tv_done"
                                        android:layout_width="fill_parent"
                                        android:layout_height="@dimen/dp50"
                                        android:background="@drawable/but_oval_black"
                                        android:gravity="center"
                                        android:text="@string/s_save_this_location"
                                        android:textColor="@drawable/text_white"
                                        android:textSize="@dimen/dp18" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>