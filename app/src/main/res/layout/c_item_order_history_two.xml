<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:padding="@dimen/dp5"
            android:weightSum="100"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp200"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="40"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:background="@drawable/box_k"/>

                    <tr.limonist.extras.MyTextView
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/a_brown11"
                        android:textAllCaps="true"
                        android:gravity="center_vertical"
                        android:foregroundGravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="@string/s_mobile_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <tr.limonist.extras.MyTextView
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/a_brown12"
                        android:gravity="center_vertical"
                        android:foregroundGravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="@string/s_order_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <tr.limonist.extras.MyTextView
                        android:id="@+id/number"
                        android:layout_marginStart="@dimen/dp2"
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/a_brown12"
                        android:gravity="center_vertical"
                        android:foregroundGravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <tr.limonist.extras.MyTextView
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/a_brown12"
                        android:gravity="center_vertical"
                        android:foregroundGravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="@string/s_order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <tr.limonist.extras.MyTextView
                        android:layout_marginStart="@dimen/dp2"
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/a_brown12"
                        android:gravity="center_vertical"
                        android:foregroundGravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="Kargo ile Teslim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <tr.limonist.extras.MyTextView
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/a_brown12"
                        android:gravity="center_vertical"
                        android:foregroundGravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="@string/s_order_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <tr.limonist.extras.MyTextView
                        android:id="@+id/total"
                        android:textSize="@dimen/dp20"
                        android:fontFamily="@font/comfortaa"
                        android:textColor="@color/a_brown11"
                        android:gravity="center_vertical"
                        android:foregroundGravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="125 TL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <tr.limonist.extras.MyTextView
                    android:id="@+id/status"
                    android:textSize="@dimen/dp18"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/a_success11"
                    android:gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="TAMAMALANDI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:weightSum="100"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="60"
                android:layout_gravity="end"
                android:gravity="end"
                android:foregroundGravity="right"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp10">

                <tr.limonist.extras.MyTextView
                    android:id="@+id/date"
                    android:layout_weight="40"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/a_brown11"
                    android:text="@string/s_order_total"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <tr.limonist.extras.MyTextView
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/a_brown11"
                    android:gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="@string/s_payment_type"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <tr.limonist.extras.MyTextView
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/a_brown12"
                    android:gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="@string/s_order_total"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
        </LinearLayout>
</LinearLayout>