<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zxing_transparent"
    android:clipChildren="false"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingRight="@dimen/dp30"
    android:paddingBottom="@dimen/dp15"
    android:paddingTop="@dimen/dp15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                app:placeholderImage="@mipmap/name_surname_k"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/a_brown11"
                app:roundingBorderWidth="@dimen/dp2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <tr.limonist.extras.MyTextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp25"
                android:fontFamily="@font/comfortaa"
                android:gravity="bottom|left"
                android:textColor="@color/a_brown11"
                android:textSize="@dimen/dp15"
                android:textStyle="bold" />

            <tr.limonist.extras.MyTextView
                android:id="@+id/mail"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp20"
                android:layout_marginTop="@dimen/dp8"
                android:fontFamily="@font/comfortaa"
                android:gravity="top|left"
                android:textColor="@color/a_brown11"
                android:textSize="@dimen/dp12" />

        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/edit_profile"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:layout_centerInParent="true"
            app:actualImageScaleType="fitCenter"
            android:background="@drawable/profile_info_k"
            app:placeholderImageScaleType="fitCenter"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/a_white11"
            app:roundingBorderWidth="@dimen/dp2" />
    </LinearLayout>

</LinearLayout>