<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/a_white11"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_remove"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_weight="0"
            android:padding="@dimen/dp10"
            android:src="@drawable/b_ic_remove_red"
            android:visibility="gone" />

        <LinearLayout
            android:padding="@dimen/dp10"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_weight="0"
                android:id="@+id/img"
                android:layout_width="@dimen/dp80"
                app:roundedCornerRadius="@dimen/dp10"
                app:roundingBorderColor="@color/a_black11"
                android:layout_height="@dimen/dp80"
                app:actualImageScaleType="fitCenter"
                app:placeholderImage="@mipmap/place_holder" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp10"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <tr.limonist.extras.MyTextView
                    android:fontFamily="@font/comfortaa"
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp40"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/a_black11"
                    android:textSize="@dimen/dp18" />

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <tr.limonist.extras.MyTextView
                            android:fontFamily="@font/comfortaa"
                            android:layout_weight="0"
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|left"
                            android:textColor="@color/a_black12"
                            android:textSize="@dimen/dp20" />

                        <tr.limonist.extras.MyTextView
                            android:layout_weight="0"

                            android:fontFamily="@font/comfortaa"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:padding="@dimen/dp2"
                            android:text=" X "
                            android:textColor="@drawable/text_black2"
                            android:textSize="@dimen/dp15" />

                        <tr.limonist.extras.MyTextView
                            android:fontFamily="@font/comfortaa"
                            android:layout_weight="1"
                            android:id="@+id/price"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical|left"
                            android:textColor="@color/a_main21"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp20" />

                    </LinearLayout>


                    <LinearLayout
                        android:padding="@dimen/dp3"
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lay_minus"
                            android:layout_width="@dimen/dp60"
                            android:layout_height="fill_parent"
                            android:background="@drawable/but_oval_only_left_str_black_tra"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp10"
                            android:paddingRight="@dimen/dp5">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:duplicateParentState="true"
                                android:src="@drawable/b_ic_minus_black" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_plus"
                            android:layout_width="@dimen/dp60"
                            android:layout_height="fill_parent"
                            android:background="@drawable/but_oval_only_right_str_black_tra"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp5"
                            android:paddingRight="@dimen/dp10">

                            <ImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:duplicateParentState="true"
                                android:src="@drawable/b_ic_plus_black" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>