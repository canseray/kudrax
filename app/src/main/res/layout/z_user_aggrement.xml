<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/login_blur"
        android:visibility="gone"
        app:realtimeBlurRadius="10dp"
        app:realtimeOverlayColor="#8000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<LinearLayout

    android:orientation="vertical"
    android:padding="@dimen/dp10"
    android:weightSum="100"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.user.UserAggrement">

    <WebView
        android:id="@+id/webview"
        android:layout_weight="96"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp8"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/acb"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            app:checked="false"
            app:circle_color="@color/a_brown11"
            app:stroke_color="@color/a_brown11"
            app:stroke_width="@dimen/dp2" />

        <TextView
            android:layout_marginStart="@dimen/dp5"
            android:textColor="@color/a_brown11"
            android:fontFamily="@font/comfortaa"
            android:textSize="@dimen/dp18"
            android:text="@string/s_read_and_accept_user_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <tr.limonist.extras.MyTextView
        android:id="@+id/tv_done"
        android:text="@string/s_done_process"
        android:gravity="center"
        android:textSize="@dimen/dp18"
        android:fontFamily="@font/comfortaa"
        android:background="@drawable/but_oval_str_brown1_tra"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"/>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>