<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/a_white11"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="@dimen/dp5"
        android:id="@+id/lay_address"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp40"
        android:gravity="center"
        android:padding="@dimen/dp5"
        android:orientation="horizontal">

        <tr.limonist.extras.MyTextView
            android:fontFamily="@font/comfortaa"
            android:duplicateParentState="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="@string/s_delivery_address"
            android:textColor="@drawable/text_black2"
            android:textSize="@dimen/dp15" />

        <ImageView
            android:duplicateParentState="true"
            android:src="@drawable/b_ic_edit_black"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/a_black13"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp5"
        android:padding="@dimen/dp5"
        android:background="@drawable/back_rnd_str_black3_tra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            app:ms_dropdown_height="wrap_content"
            app:ms_arrow_tint="@color/a_black11"
            app:ms_background_color="@color/a_white11"
            app:ms_text_color="@color/a_black11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"/>

    </LinearLayout>

</LinearLayout>