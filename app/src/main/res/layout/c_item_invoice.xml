<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="@dimen/dp10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/dp10"
        android:background="@drawable/but_oval_str_brown1_tra"
        android:weightSum="100"
        android:paddingBottom="@dimen/dp2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="40"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp10">

            <LinearLayout
                android:paddingVertical="@dimen/dp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <tr.limonist.extras.MyTextView
                    android:id="@+id/name"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/a_brown11"
                    android:gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="name"
                    android:textSize="@dimen/dp18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <tr.limonist.extras.MyTextView
                    android:id="@+id/total_title"
                    android:textSize="@dimen/dp15"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/a_brown12"
                    android:gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <tr.limonist.extras.MyTextView
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/a_brown12"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp15"
                    android:foregroundGravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="@string/s_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <tr.limonist.extras.MyTextView
                    android:id="@+id/amount"
                    android:textSize="@dimen/dp25"
                    android:fontFamily="@font/comfortaa"
                    android:textColor="@color/a_brown11"
                    android:gravity="center_vertical"
                    android:foregroundGravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="125 TL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="100"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="60"
            android:layout_gravity="end"
            android:gravity="end"
            android:foregroundGravity="right"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp10">

            <tr.limonist.extras.MyTextView
                android:id="@+id/date"
                android:layout_weight="90"
                android:textSize="@dimen/dp15"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/a_brown11"
                android:text="tarih"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/e_invoice"
                android:background="@drawable/but_oval_str_brown1_brown1"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp5"
                android:paddingHorizontal="@dimen/dp20"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:src="@color/a_white11"
                    android:duplicateParentState="true" />


                <tr.limonist.extras.MyTextView
                    android:fontFamily="@font/comfortaa"
                    android:layout_marginLeft="@dimen/dp8"
                    android:textColor="@color/a_white11"
                    android:text="E-Fatura"
                    android:id="@+id/tv_call_number"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:duplicateParentState="true"
                    android:textSize="@dimen/dp15" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>