<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp250"
    android:orientation="vertical"
    android:padding="@dimen/dp10">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp185"
        android:duplicateParentState="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:duplicateParentState="true"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp150"
                app:actualImageScaleType="fitCenter"
                app:placeholderImage="@mipmap/buy_mobile_k"
                app:roundAsCircle="true"
                app:roundTopLeft="true"
                app:roundTopRight="true"
                app:roundingBorderColor="@color/a_brown11"
                app:roundingBorderWidth="@dimen/dp1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="30">

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="15" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">



                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_play"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    app:placeholderImage="@mipmap/new_play_k"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="@color/a_brown11"
                    app:roundingBorderWidth="@dimen/dp1" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp10"
                    android:id="@+id/img_favorite"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    app:placeholderImage="@mipmap/new_fav_flower_k"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="@color/a_brown11"
                    app:roundingBorderWidth="@dimen/dp1" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="15" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:duplicateParentState="true"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100">

        <tr.limonist.extras.MyTextView
            android:id="@+id/title"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dp30"
            android:textColor="@color/a_brown11"
            android:textSize="@dimen/dp15"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/a_brown11"
            android:paddingHorizontal="@dimen/dp50" />


    </LinearLayout>


</LinearLayout>