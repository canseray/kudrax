<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <tr.limonist.extras.AutoScrollViewPager
        android:id="@+id/jazzy_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </tr.limonist.extras.AutoScrollViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp25"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="20" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="60"
                    android:padding="@dimen/dp10"
                    app:fillColor="@color/a_brown11"
                    app:pageColor="@color/a_white11"
                    app:radius="@dimen/dp4"
                    app:strokeColor="@color/a_white11" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="20"
                    android:gravity="center">

                    <tr.limonist.extras.MyTextView
                        android:textAllCaps="true"
                        android:fontFamily="@font/comfortaa"
                        android:id="@+id/tv_skip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/but_oval_str_brown1_tra"
                        android:gravity="center"
                        android:text="@string/s_next"
                        android:textColor="@drawable/text_white"
                        android:textSize="@dimen/dp15"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>